<%- view_title "Welcome!" %>

<% content_for :main do %>
<style>
  body {
    background-color: #<%= @colour %>;
  }
</style>

<div class="row">
  <div class="col-12 col-12 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
    <%= colour_panel(@colour, @panel_colour, @text_colour, root_path) %>
  </div>
  <div class="col-xs-12 col-12 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
    <%= meta_panel(@colour, @panel_colour, @text_colour) %>
  </div>
</div>
<% end %>
