<head>
  <title><%= "#{Rails.application.config.app_name}" %><%= content_for?(:title) ?  " | #{content_for(:title)}" : "" %></title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= stylesheet_link_tag params[:controller] %>

  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Nova+Mono" />
  
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag params[:controller] %>
  
  <%= csrf_meta_tags %>
  
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta property="og:site_name" content="cruller"/>

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-38521422-5"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-38521422-5');
  </script>
</head>
