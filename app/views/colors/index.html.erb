<%- view_title "Welcome!" %>

<% content_for :main do %>

<style>
  body {
    background-color: #<%= @color %>;
  }
</style>

<div class="container">
  <div class="row text-center">
    <div class="col-sm-8 mx-auto">
      <%= color_card(@color, @card_color, @text_color, root_path) %>
    </div>
  </div>
  <div class="row text-start">
    <div class="col-sm-8 mx-auto">
      <%= meta_card(@color, @card_color, @text_color) %>
    </div>
  </div>
</div>

<% end %>