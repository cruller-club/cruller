<div class="panel" style="background-color: #<%= panel_color %>;">
  <%= link_to(link) do %>
  <div class="panel-body text-center" style="color: #<%= text_color %>;">
    <div class="jumbo jumbo-10">
      #<%= color %>
    </div>
    <div class="jumbo jumbo-3">
      <ul class="list-inline">
        <li class="list-inline-item">R: <%= format("%03d", color.red) %></li>
        <li class="list-inline-item">G: <%= format("%03d", color.green) %></li>
        <li class="list-inline-item">B: <%= format("%03d", color.blue) %></li>
      </ul>
    </div>
  </div>
  <% end %>
</div>